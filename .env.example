# Application Port (optional, defaults to 4000)
PORT=4000

# Supabase Configuration
# Get these from your Supabase project dashboard: https://supabase.com/dashboard

# Supabase Project URL
SUPABASE_URL=""

# Supabase Anonymous Key (public key for client-side operations)
SUPABASE_ANON_KEY=""

# Supabase Service Role Key (secret key for server-side operations, keep secure!)
SUPABASE_SERVICE_ROLE_KEY=""

# Connect to Supabase via connection pooling
DATABASE_URL=""

# Direct connection to the database. Used for migrations
DIRECT_URL=""

# OAuth Provider Configuration (Google example)
OAUTH_CLIENT_ID=""
OAUTH_CLIENT_SECRET=""
OAUTH_CALLBACK=""

# Redis Configuration
REDIS_HOST=""
REDIS_PORT=6379
REDIS_PASSWORD=""

# MapBox Token
TOKEN=""
# Frontend Application URL
# Used for Google OAuth callback and other frontend redirects
# Development: http://localhost:3000
# Dev Tunnels: https://4d8wf50z-3000.brs.devtunnels.ms
# Production: https://yourdomain.com
APP_URL="http://localhost:3000"

# Google Gemini API Key (for text generation and TTS)
# You can set one of these: GOOGLE_GENERATIVE_AI_API_KEY, GOOGLE_API_KEY, or GEMINI_API_KEY
GOOGLE_GENERATIVE_AI_API_KEY=""

# (Optional) Gemini TTS timeout in milliseconds (default: 60000)
GEMINI_TTS_TIMEOUT_MS=180000

# (Optional) Number of TTS attempts (default: 2)
GEMINI_TTS_ATTEMPTS=3

# (Optional) Summarization timeout
GEMINI_SUMMARIZE_TIMEOUT_MS=30000

# (Optional) Max characters for summaries returned by Gemini (title + paragraph). Default: 300
GEMINI_SUMMARY_MAX_CHARS=300

# (Optional) Google Cloud Application Credentials (for Cloud TTS)
# Point to the JSON service account key file used for text-to-speech (ex: /path/credentials.json)
# Alternatively, use ADC (Application Default Credentials).
GOOGLE_APPLICATION_CREDENTIALS="/path/to/google-credentials.json"

# (Optional) Chirp model name (some voices require a model to be set). E.g., 'chirp-3' or similar
GEMINI_CHIRP_MODEL=""

# (Optional) TTL in ms for audio tasks stored in memory before they expire (default: 15m)
AUDIO_TASK_TTL_MS=900000

# (Optional) Default audio encoding for Chirp TTS (MP3, LINEAR16, OGG_OPUS)
GEMINI_CHIRP_AUDIO_ENCODING=MP3